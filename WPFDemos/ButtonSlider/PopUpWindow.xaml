<Window x:Class="WPFDemos.PopUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDemos"
        mc:Ignorable="d"
        Title="Info" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Vertical" Margin="40">

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Text:" FontSize="20" Margin="10" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding ButtonText}" FontSize="20" FontStyle="Italic" VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Width:" FontSize="20" Margin="10" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding ButtonWidth}" FontSize="20" FontStyle="Italic" VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Height:" FontSize="20" Margin="10" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding ButtonHeight}" FontSize="20" FontStyle="Italic" VerticalAlignment="Center"/>
        </StackPanel>
        
    </StackPanel>
</Window>
